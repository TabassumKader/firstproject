<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.DirectorGoal2Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Goal 2: Approve Budget for Network" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back to Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#goBack" />
         </children>
      </HBox>
      
      <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <children>
               <Label text="Workflow Steps" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 1:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Navigate to budget approval section" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 2:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="View submitted proposals from engineering &amp; finance" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="DP, OP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 3:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Review budget breakdowns &amp; justifications" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="OP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 4:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Click on approve or request modification" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 5:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Provide digital signature &amp; remarks" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UID, VR" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <Label text="Budget Proposals" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="proposalIdColumn" text="Proposal ID" />
                     <TableColumn fx:id="departmentColumn" text="Department" />
                     <TableColumn fx:id="amountColumn" text="Amount (BDT)" />
                     <TableColumn fx:id="statusColumn" text="Status" />
                     <TableColumn fx:id="actionColumn" text="Action" />
                  </columns>
               </TableView>
               
               <HBox spacing="20" alignment="CENTER">
                  <children>
                     <Button text="Refresh Proposals" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#refreshProposals" />
                     <Button text="View Details" style="-fx-background-color: #f39c12; -fx-text-fill: white;" onAction="#viewProposalDetails" />
                     <Button text="Approve Selected" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#approveSelected" />
                     <Button text="Request Modification" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#requestModification" />
                  </children>
               </HBox>
               
               <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <Label text="Digital Signature &amp; Remarks" style="-fx-font-weight: bold;" />
                     <TextArea fx:id="remarksArea" promptText="Enter your remarks here..." prefRowCount="3" />
                     <HBox spacing="10" alignment="CENTER_RIGHT">
                        <children>
                           <Button text="Sign &amp; Submit" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" onAction="#signAndSubmit" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </VBox>
      </ScrollPane>
   </children>
</VBox>
