<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.CustomerGoal2Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Goal 2: Pay Monthly Gas Bill" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back to Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#goBack" />
         </children>
      </HBox>
      
      <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <children>
               <Label text="Workflow Steps" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 1:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Go to \"Pay Bill\" menu" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 2:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="View bill amount and history" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="DP, OP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 3:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Choose payment method" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UID" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 4:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Confirm and process payment" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 5:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Show success message with receipt" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="OP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <Label text="Bill Payment" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <HBox spacing="20">
                  <children>
                     <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                           <Label text="Current Bill Details" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                           
                           <GridPane hgap="15" vgap="10">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                              </columnConstraints>
                              
                              <children>
                                 <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
                                 <Label fx:id="customerIdLabel" text="CUST001234" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                 
                                 <Label text="Bill Month:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
                                 <Label fx:id="billMonthLabel" text="December 2024" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 
                                 <Label text="Due Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
                                 <Label fx:id="dueDateLabel" text="15 December 2024" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                 
                                 <Label text="Gas Usage:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
                                 <Label fx:id="usageLabel" text="45.5 cubic meters" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 
                                 <Label text="Bill Amount:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
                                 <Label fx:id="amountLabel" text="1,250 BDT" style="-fx-font-size: 18px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              </children>
                           </GridPane>
                           
                           <Separator />
                           
                           <Label text="Payment History" style="-fx-font-weight: bold;" />
                           <TableView fx:id="historyTable" prefHeight="150">
                              <columns>
                                 <TableColumn fx:id="monthColumn" text="Month" />
                                 <TableColumn fx:id="amountColumn" text="Amount" />
                                 <TableColumn fx:id="statusColumn" text="Status" />
                              </columns>
                           </TableView>
                        </children>
                     </VBox>
                     
                     <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                           <Label text="Payment Method" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                           
                           <VBox spacing="10">
                              <children>
                                 <RadioButton fx:id="mobileBankingRadio" text="Mobile Banking" selected="true" />
                                 <RadioButton fx:id="creditCardRadio" text="Credit/Debit Card" />
                                 <RadioButton fx:id="bankTransferRadio" text="Bank Transfer" />
                                 <RadioButton fx:id="cashRadio" text="Cash Payment" />
                              </children>
                           </VBox>
                           
                           <Separator />
                           
                           <Label text="Payment Details" style="-fx-font-weight: bold;" />
                           
                           <GridPane hgap="15" vgap="10">
                              <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                              </columnConstraints>
                              
                              <children>
                                 <Label text="Amount to Pay:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
                                 <TextField fx:id="paymentAmountField" text="1250" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                 
                                 <Label text="Transaction ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
                                 <TextField fx:id="transactionIdField" promptText="Enter transaction ID" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              </children>
                           </GridPane>
                           
                           <HBox spacing="20" alignment="CENTER">
                              <children>
                                 <Button text="Calculate Bill" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#calculateBill" />
                                 <Button text="Pay Bill" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#payBill" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
      </ScrollPane>
   </children>
</VBox>
