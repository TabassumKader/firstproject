<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.CustomerDashboardController">
   <children>
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Domestic Customer Dashboard" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleLogout" />
         </children>
      </HBox>
      
      <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <children>
               <Label text="Customer Services" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <GridPane hgap="20" vgap="20">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  
                  <children>
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <children>
                           <Label text="Goal 1" style="-fx-font-weight: bold;" />
                           <Label text="Apply for New Gas Connection" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal1" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <children>
                           <Label text="Goal 2" style="-fx-font-weight: bold;" />
                           <Label text="Pay Monthly Gas Bill" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal2" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <children>
                           <Label text="Goal 3" style="-fx-font-weight: bold;" />
                           <Label text="Submit a Service Complaint" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal3" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                        <children>
                           <Label text="Goal 4" style="-fx-font-weight: bold;" />
                           <Label text="Track Connection Status" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal4" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <children>
                           <Label text="Goal 5" style="-fx-font-weight: bold;" />
                           <Label text="Update Customer Profile" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal5" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                           <Label text="Goal 6" style="-fx-font-weight: bold;" />
                           <Label text="Book a Technician Visit" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal6" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <children>
                           <Label text="Goal 7" style="-fx-font-weight: bold;" />
                           <Label text="Request Billing Clarification" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal7" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                        <children>
                           <Label text="Goal 8" style="-fx-font-weight: bold;" />
                           <Label text="Download Connection Certificate" style="-fx-text-alignment: center;" wrapText="true" />
                           <Button text="Access" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#openGoal8" />
                        </children>
                     </VBox>
                  </children>
               </GridPane>
            </children>
         </VBox>
      </ScrollPane>
   </children>
</VBox>
