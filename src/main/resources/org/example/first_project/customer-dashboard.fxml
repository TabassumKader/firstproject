<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.CustomerDashboardController">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Domestic Customer Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      <GridPane hgap="20.0" vgap="20.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250">
               <children>
                  <Label text="Goal 1: Apply for New Gas Connection" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal1" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="1">
               <children>
                  <Label text="Goal 2: Pay Monthly Gas Bill" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal2" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="2">
               <children>
                  <Label text="Goal 3: Submit Service Complaint" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal3" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="3">
               <children>
                  <Label text="Goal 4: Request Meter Reading" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal4" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.rowIndex="1">
               <children>
                  <Label text="Goal 5: Schedule Maintenance Visit" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal5" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="Goal 6: View Billing History" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal6" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <children>
                  <Label text="Goal 7: Update Personal Information" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal7" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" maxWidth="250" minWidth="250" GridPane.columnIndex="3" GridPane.rowIndex="1">
               <children>
                  <Label text="Goal 8: Emergency Contact" style="-fx-font-weight: bold;" />
                  <Button text="Access" onAction="#openGoal8" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
   </children>
</VBox>
