<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.first_project.controllers.DirectorDashboardController">

    <!-- Top Section: Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- Left Section: Navigation Menu -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f8f8;">
            <Button text="Dashboard" maxWidth="Infinity"/>
            <Button text="Budget Management" maxWidth="Infinity" onAction="#handleBudgetManagement"/>
            <Button text="Policy Management" maxWidth="Infinity" onAction="#handlePolicyManagement"/>
            <Button text="Emergency Management" maxWidth="Infinity" onAction="#handleEmergencyManagement"/>
            <Button text="System Monitoring" maxWidth="Infinity" onAction="#handleSystemMonitoring"/>
            <Button text="Performance Analysis" maxWidth="Infinity" onAction="#handlePerformanceAnalysis"/>
            <Button text="Generate Reports" maxWidth="Infinity" onAction="#handleReportGeneration"/>
        </VBox>
    </left>

    <!-- Center Section: Main Content -->
    <center>
        <VBox fx:id="dashboardContent" spacing="20" style="-fx-padding: 20;">
            <!-- System Overview -->
            <TitledPane text="System Overview" expanded="true">
                <VBox spacing="10">
                    <Label fx:id="systemStatusLabel"/>
                    <Label fx:id="customerCountLabel"/>
                    <Label fx:id="revenueLabel"/>
                </VBox>
            </TitledPane>

            <!-- Alerts and Notifications -->
            <TitledPane text="Active Alerts" expanded="true">
                <ListView fx:id="alertsList" prefHeight="150"/>
            </TitledPane>

            <!-- Pending Approvals -->
            <TitledPane text="Pending Approvals" expanded="true">
                <VBox spacing="10">
                    <TabPane>
                        <Tab text="Budgets">
                            <ListView fx:id="pendingBudgetsList" prefHeight="150"/>
                        </Tab>
                        <Tab text="Policies">
                            <ListView fx:id="pendingPoliciesList" prefHeight="150"/>
                        </Tab>
                    </TabPane>
                </VBox>
            </TitledPane>
        </VBox>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox style="-fx-padding: 5; -fx-background-color: #f0f0f0;">
            <Label text="Last Updated: " />
            <Label fx:id="lastUpdateLabel"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ProgressIndicator fx:id="loadingIndicator" visible="false"/>
        </HBox>
    </bottom>

</BorderPane>
