<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.DirectorGoal1Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Goal 1: Monitor Operational Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back to Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#goBack" />
         </children>
      </HBox>
      
      <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <children>
               <Label text="Workflow Steps" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 1:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Log in with director credentials" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE, VL, VR" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 2:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Select the operation dashboard's module" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 3:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="System fetches data on active connections, complaints, billing, supply issues" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="DP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 4:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Display visual analytics &amp; performance summary" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="OP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 5:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Filter date by division, timeframe or department" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE, UID, DP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <Label text="Interactive Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <GridPane hgap="20" vgap="20">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  
                  <children>
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <children>
                           <Label text="Active Connections" style="-fx-font-weight: bold;" />
                           <Label fx:id="connectionsLabel" text="1,234" style="-fx-font-size: 24px; -fx-text-fill: #27ae60;" />
                           <Button text="View Details" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#viewConnections" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <children>
                           <Label text="Pending Complaints" style="-fx-font-weight: bold;" />
                           <Label fx:id="complaintsLabel" text="45" style="-fx-font-size: 24px; -fx-text-fill: #e74c3c;" />
                           <Button text="View Details" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#viewComplaints" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <children>
                           <Label text="Billing Issues" style="-fx-font-weight: bold;" />
                           <Label fx:id="billingLabel" text="12" style="-fx-font-size: 24px; -fx-text-fill: #f39c12;" />
                           <Button text="View Details" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#viewBilling" />
                        </children>
                     </VBox>
                     
                     <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                           <Label text="Supply Issues" style="-fx-font-weight: bold;" />
                           <Label fx:id="supplyLabel" text="3" style="-fx-font-size: 24px; -fx-text-fill: #9b59b6;" />
                           <Button text="View Details" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#viewSupply" />
                        </children>
                     </VBox>
                  </children>
               </GridPane>
               
               <HBox spacing="20" alignment="CENTER">
                  <children>
                     <ComboBox fx:id="divisionComboBox" promptText="Select Division" />
                     <ComboBox fx:id="timeframeComboBox" promptText="Select Timeframe" />
                     <ComboBox fx:id="departmentComboBox" promptText="Select Department" />
                     <Button text="Apply Filters" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#applyFilters" />
                  </children>
               </HBox>
            </children>
         </VBox>
      </ScrollPane>
   </children>
</VBox>
