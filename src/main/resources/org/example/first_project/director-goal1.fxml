<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.DirectorGoal1Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Goal 1: Monitor Operational Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Go Back" onAction="#goBack" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <VBox spacing="20.0">
         <children>
            <Label text="Workflow Steps:" style="-fx-font-weight: bold;" />
            <VBox spacing="5.0">
               <children>
                  <Label text="1. View active connections and complaints" />
                  <Label text="2. Monitor billing and supply issues" />
                  <Label text="3. Filter data by division and timeframe" />
                  <Label text="4. Generate reports" />
               </children>
            </VBox>
            
            <GridPane hgap="20.0" vgap="10.0">
               <children>
                  <Label text="Active Connections:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label fx:id="activeConnectionsLabel" text="1,250" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Button text="View Details" onAction="#viewConnections" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  
                  <Label text="Open Complaints:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Label fx:id="complaintsLabel" text="45" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button text="View Details" onAction="#viewComplaints" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  
                  <Label text="Pending Bills:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Label fx:id="billingLabel" text="320" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button text="View Details" onAction="#viewBilling" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  
                  <Label text="Supply Issues:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <Label fx:id="supplyLabel" text="12" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Button text="View Details" onAction="#viewSupply" GridPane.columnIndex="2" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            
            <VBox spacing="10.0">
               <children>
                  <Label text="Filters:" style="-fx-font-weight: bold;" />
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Division:" />
                              <ComboBox fx:id="divisionComboBox" promptText="Select Division" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Timeframe:" />
                              <ComboBox fx:id="timeframeComboBox" promptText="Select Timeframe" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Department:" />
                              <ComboBox fx:id="departmentComboBox" promptText="Select Department" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <Button text="Apply Filters" onAction="#applyFilters" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
