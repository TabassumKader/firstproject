<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.CustomerGoal1Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Goal 1: Apply for New Gas Connection" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Back to Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#goBack" />
         </children>
      </HBox>
      
      <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
         <VBox spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <children>
               <Label text="Workflow Steps" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 1:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Visit titas gas portal" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 2:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Select apply for new connection" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 3:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Fill in application form (Name, NID, Address, etc.)" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UID" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 4:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Upload documents (NID, utility bill, photo)" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UID, VL" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                     
                     <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                           <Label text="Event 5:" style="-fx-font-weight: bold; -fx-min-width: 80;" />
                           <Label text="Submit and receive application ID" style="-fx-font-size: 14px;" />
                           <Region HBox.hgrow="ALWAYS" />
                           <Label text="UIE, DP" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
               
               <Label text="New Gas Connection Application" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
               
               <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                  <children>
                     <GridPane hgap="15" vgap="10">
                        <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        </columnConstraints>
                        
                        <children>
                           <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
                           <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter your full name" />
                           
                           <Label text="NID Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;" />
                           <TextField fx:id="nidField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter your NID number" />
                           
                           <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;" />
                           <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Enter your phone number" />
                           
                           <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;" />
                           <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Enter your email address" />
                           
                           <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;" />
                           <TextArea fx:id="addressArea" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Enter your complete address" prefRowCount="3" />
                           
                           <Label text="Connection Type:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold;" />
                           <ComboBox fx:id="connectionTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="Select connection type" />
                           
                           <Label text="Property Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-weight: bold;" />
                           <ComboBox fx:id="propertyTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" promptText="Select property type" />
                        </children>
                     </GridPane>
                     
                     <Separator />
                     
                     <Label text="Required Documents" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                     
                     <VBox spacing="10">
                        <children>
                           <HBox spacing="10" alignment="CENTER_LEFT">
                              <children>
                                 <Label text="NID Copy:" style="-fx-font-weight: bold;" />
                                 <Button text="Browse" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#browseNID" />
                                 <Label fx:id="nidFileLabel" text="No file selected" style="-fx-text-fill: #7f8c8d;" />
                              </children>
                           </HBox>
                           
                           <HBox spacing="10" alignment="CENTER_LEFT">
                              <children>
                                 <Label text="Utility Bill:" style="-fx-font-weight: bold;" />
                                 <Button text="Browse" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#browseUtilityBill" />
                                 <Label fx:id="utilityFileLabel" text="No file selected" style="-fx-text-fill: #7f8c8d;" />
                              </children>
                           </HBox>
                           
                           <HBox spacing="10" alignment="CENTER_LEFT">
                              <children>
                                 <Label text="Photo:" style="-fx-font-weight: bold;" />
                                 <Button text="Browse" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#browsePhoto" />
                                 <Label fx:id="photoFileLabel" text="No file selected" style="-fx-text-fill: #7f8c8d;" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     
                     <HBox spacing="20" alignment="CENTER_RIGHT">
                        <children>
                           <Button text="Clear Form" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" onAction="#clearForm" />
                           <Button text="Submit Application" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#submitApplication" />
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </VBox>
      </ScrollPane>
   </children>
</VBox>
