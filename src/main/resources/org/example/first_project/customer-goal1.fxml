<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.first_project.CustomerGoal1Controller">
   <children>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Goal 1: Apply for New Gas Connection" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Go Back" onAction="#goBack" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <VBox spacing="20.0">
         <children>
            <Label text="Workflow Steps:" style="-fx-font-weight: bold;" />
            <VBox spacing="5.0">
               <children>
                  <Label text="1. Fill out application form" />
                  <Label text="2. Upload required documents" />
                  <Label text="3. Submit application" />
                  <Label text="4. Receive application ID" />
               </children>
            </VBox>
            
            <Label text="Application Form:" style="-fx-font-weight: bold;" />
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="NID Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="nidField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                  <TextArea fx:id="addressArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  
                  <Label text="Connection Type:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                  <ComboBox fx:id="connectionTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  
                  <Label text="Property Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                  <ComboBox fx:id="propertyTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
            </GridPane>
            
            <Label text="Required Documents:" style="-fx-font-weight: bold;" />
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="NID Copy:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                     <children>
                        <TextField fx:id="nidFileField" editable="false" />
                        <Button text="Browse" onAction="#browseNID" />
                     </children>
                  </HBox>
                  
                  <Label text="Utility Bill:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <TextField fx:id="utilityFileField" editable="false" />
                        <Button text="Browse" onAction="#browseUtilityBill" />
                     </children>
                  </HBox>
                  
                  <Label text="Photo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <TextField fx:id="photoFileField" editable="false" />
                        <Button text="Browse" onAction="#browsePhoto" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
            
            <HBox spacing="20.0">
               <children>
                  <Button text="Clear Form" onAction="#clearForm" />
                  <Button text="Submit Application" onAction="#submitApplication" />
               </children>
            </HBox>
            
            <Label fx:id="statusLabel" text="" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
